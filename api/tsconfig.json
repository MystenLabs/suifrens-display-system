{
	"compilerOptions": {
		"lib": ["ES2020", "DOM"],
		"target": "esnext",
		"jsx": "react-jsx",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		"declaration": true,
		"sourceMap": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"references": [{ "path": "../ui" }],
	"exclude": ["node_modules", "dist"]
}
